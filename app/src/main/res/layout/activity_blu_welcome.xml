<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blu_primary_2"
    tools:context=".app.ui.welcome.BluWelcomeActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpWelcome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:contentDescription="blu"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logo_white"
                tools:ignore="HardcodedText,ImageContrastCheck" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivLocale"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:contentDescription="blu"
            android:src="@drawable/bg_button_corner_white"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/ivArrowBottom"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="blu"
            android:src="@drawable/bg_button_corner_white"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlDotWelcome"
        android:layout_width="75dp"
        android:layout_height="6dp"
        app:tabIndicator="@null"
        app:tabBackground="@drawable/bg_dot_line_tab"
        android:layout_marginBottom="20dp"
        app:tabGravity="center"
        app:tabPadding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnStart"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_corner_white"
        android:text="Yuk Mulai!"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="16sp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvFeesRates"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvFeesRates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/btn_fees_rates"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>