<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blu_primary"
    tools:context=".app.ui.splashScreen.BluSplashScreenActivity">

    <ImageView
        android:id="@+id/ivLogoWhite"
        android:layout_width="140dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_logo_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivBrandWhite"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_brand_white"
        app:layout_constraintEnd_toEndOf="@id/ivLogoWhite"
        app:layout_constraintStart_toStartOf="@id/ivLogoWhite"
        app:layout_constraintTop_toTopOf="@id/ivLogoWhite"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/wavePrimary"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:scaleType="center"
        android:src="@drawable/wave_2_primary_grad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivBrandOjk"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:src="@drawable/splash_ojk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivBrandLps"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/wavePrimary"
        app:layout_constraintVertical_bias="0.65"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivBrandLps"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:src="@drawable/splash_lps"
        app:layout_constraintBottom_toBottomOf="@id/ivBrandOjk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBrandOjk"
        app:layout_constraintTop_toTopOf="@id/wavePrimary"
        app:layout_constraintVertical_bias="1"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/splash_desc"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBrandOjk"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>